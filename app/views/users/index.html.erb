<p id="notice"><%= notice %></p>

<h2>Users</h2>
<div class = "container">
<table class = "table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user, :class => "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_user_path(user), :class => "btn btn-success" %></td>
        <td><%= link_to 'Destroy', user, :class => "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New User', new_user_path, :class => "btn btn-default"  %>
